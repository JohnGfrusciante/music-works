%ul.messages-list
  - @messages.each do |message|
    %li.messages-list__content
      .messages-list__content--nema
        = message.user.name
      .messages-list__content--created-time
        = message.created_at.strftime("%Y年%m月%d日 %H時%M分")
      .messages-list__content--content
        = message.content
      .messages-list__content--edit
        = link_to "編集", "/matters/#{@matter.id}/chats/#{@chat.id}/messages/#{message.id}/edit"
      .messages-list__content--delete
        = link_to "削除", "/matters/#{@matter.id}/chats/#{@chat.id}/messages/#{message.id}", method: :delete
      %br


%br
%br
%h2 【質問入力フォーム】
= form_for(@message, url: "/matters/#{@matter.id}/chats/#{@chat.id}/messages", method: :post) do |f|
  = render "devise/shared/error_messages", resource: @message

  = f.text_field :content, autofocus: true, autocomplete: "content", placeholder: "" ,class: ''

  .actions
  = f.submit "質問を投稿する"
  %br
  %br

= link_to "TOPページへ戻る", root_path



